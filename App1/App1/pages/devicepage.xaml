<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App1.pages.devicepage">
    <ContentPage.Content>
        <StackLayout>
            <Label x:Name="deviceName" Text="Device: loading" HorizontalOptions="CenterAndExpand" />
            <Label x:Name="deviceDesc" Text="loading..." HorizontalOptions="CenterAndExpand" />


            <ListView x:Name="CommandComList" RowHeight="48">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout Grid.Row="1" Orientation="Horizontal" HorizontalOptions="CenterAndExpand"  Spacing="0">

                                <Label VerticalOptions="CenterAndExpand" Text="{Binding name}"/>
                                <Picker x:Name="_valueInput" WidthRequest="60" VerticalOptions="CenterAndExpand"  SelectedIndex="1">
                                    <Picker.Items>
                                        <x:String>True</x:String>
                                        <x:String>False</x:String>
                                    </Picker.Items>
                                </Picker>
                                <Button Clicked="clickComSend" Text="Send" CommandParameter="{Binding name}"></Button>
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            
            <ListView x:Name="CommandRetList" RowHeight="48">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout Grid.Row="1" Orientation="Horizontal" HorizontalOptions="CenterAndExpand"  Spacing="0">
                                <Label VerticalOptions="CenterAndExpand" Text="{Binding name}"/>
                                <Button Clicked="clickRetSend" Text="Recieve" CommandParameter="{Binding name}"></Button>
                                <Label x:Name="_valueOutput" VerticalOptions="CenterAndExpand" Text="{Binding value}"/>
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>